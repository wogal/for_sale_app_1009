<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sale_item_name_v2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@drawable/thin_l_blue_boarder"
    android:color="#b69f"
    android:orientation="vertical"
    android:padding="20dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout_item_name_v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone">
        <!--app:errorTextAppearance="@style/error_appearance"
        android:imeOptions="actionDone" -->
        <EditText
            android:id="@+id/edit_text_item_name_v2"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="    Sale Item Name (v2)"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="25sp"
            android:textStyle="bold"
            android:visibility="visible" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text_view_sales_item_name_v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:background="@drawable/obect_header_txt_v1_"
        android:gravity="center"
        android:padding="15dp"
        android:text="-------"
        android:textColor="#F4511E"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/But_item_name_done_v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/bg_btn_login_background"
        android:text="Done"
        android:textColor="#FFC107"
        android:textSize="25sp"
        android:textStyle="bold" />
</LinearLayout>


